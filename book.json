{
    "title":"阳光时舍",
    "author":"Sam Lau",
    "description":"阳光时舍相关信息！",
    "language":"zh-hans",
    "styles":{
        "website": "styles/website.css"
    },
    "plugins":[
        "simple-page-toc",
        "anchor-navigation-ex",
        "-lunr",
        "-search",
        "search-plus",
        "advanced-emoji",
        "splitter",
        "expandable-chapters-small",
        "local-video",
        "anchors",
        "copy-code-button",
        "alerts",
        "include-csv",
        "include-codeblock",
        "ace",
        "favicon",
        "todo",
        "emphasize"
    ],
    "pluginsConfig":{
        "simple-page-toc":{
            "maxDepth":3,
            "skipFirstH1":true
        },
        "anchor-navigation-ex":{
            "showLevel":true,
            "associatedWithSummary":true,
            "printLog":false,
            "multipleH1":true,
            "mode":"float",
            "showGoTop":true,
            "float":{
                "floatIcon":"fa fa-navicon",
                "showLevelIcon":false,
                "level1Icon":"fa fa-hand-o-right",
                "level2Icon":"fa fa-hand-o-right",
                "level3Icon":"fa fa-hand-o-right"
            },
            "pageTop":{
                "showLevelIcon":false,
                "level1Icon":"fa fa-hand-o-right",
                "level2Icon":"fa fa-hand-o-right",
                "level3Icon":"fa fa-hand-o-right"
            },
            "include-codeblock":{
                "template":"ace"
            },
            "favicon":{
                "shortcut":"assets/favicon.ico",
                "bookmark":"assets/favicon.ico",
                "appleTouch":"assets/favicon.ico",
                "appleTouchMore":{
                    "120x120":"assets/favicon.ico",
                    "180x180":"assets/favicon.ico"
                }
            }
        }
    }
}